{
    "name": "hugo-site",
    "version": "1.0.0",
    "description": "",
    "main": "index.js",
    "hugo-bin": {
        "buildTags": "extended"
    },
    "scripts": {
        "css": "tailwindcss -i assets/styles/tailwind.css -o assets/styles/tailwind.build.css",
        "css:watch": "tailwindcss -i assets/styles/tailwind.css -o assets/styles/tailwind.build.css --watch",
        "dev": "concurrently \"npm run css:watch\" \"npm run bundle-js:watch\" \"wait-on http://localhost:1414/status && npm run hugo-server\" \nnpm run ctf:preview:server",
        "lint": "eslint .",
        "build": "npm run ctf && npm run css && npm run bundle-js && hugo --minify",
        "hugo-server": "hugo server --disableFastRender",
        "hugo-server:live": "hugo server --disableFastRender --renderToDisk --liveReloadPort 80",
        "hugo-server:live-ssl": "hugo server --disableFastRender --renderToDisk --liveReloadPort 443",
        "bundle-js": "webpack --mode=production",
        "bundle-js:watch": "webpack --mode=development --watch",
        "ctf": "contentful-hugo --wait 6000",
        "ctf:preview": "contentful-hugo --preview",
        "ctf:preview:server": "contentful-hugo --preview --server",
        "live-preview-server": "npm run css && npm run bundle-js && concurrently \"wait-on http://localhost:1414/status && npm run hugo-server:live-ssl\" \"npm run ctf:preview:server\""
    },
    "author": "Joshua Sosso",
    "license": "MIT",
    "devDependencies": {
        "@fullhuman/postcss-purgecss": "^4.1.3",
        "@types/wait-on": "^5.3.1",
        "@typescript-eslint/eslint-plugin": "^5.18.0",
        "@typescript-eslint/parser": "^5.18.0",
        "autoprefixer": "^10.4.4",
        "concurrently": "^7.1.0",
        "contentful-hugo": "^2.1.4",
        "eslint": "^8.12.0",
        "eslint-config-airbnb-base": "^15.0.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-html": "^6.2.0",
        "eslint-plugin-import": "^2.26.0",
        "hugo-bin": "^0.84.0",
        "postcss": "^8.4.12",
        "postcss-cli": "^9.1.0",
        "postcss-import": "^14.1.0",
        "tailwindcss": "^3.0.23",
        "ts-loader": "^9.2.8",
        "ts-node": "^10.7.0",
        "typescript": "^4.6.3",
        "wait-on": "^6.0.1",
        "webpack": "^5.72.0",
        "webpack-cli": "^4.9.2"
    }
}
