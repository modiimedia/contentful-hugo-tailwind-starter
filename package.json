{
    "name": "hugo-site",
    "version": "1.0.0",
    "description": "",
    "main": "index.js",
    "hugo-bin": {
        "buildTags": "extended"
    },
    "scripts": {
        "dev": "concurrently \"npm run bundle-js:watch\" \"wait-on http://localhost:1414/_status && npm run hugo-server\" \nnpm run ctf:preview:server",
        "lint": "eslint .",
        "build": "npm run ctf && npm run bundle-js && hugo --minify",
        "hugo-server": "hugo server --disableFastRender",
        "hugo-server:live": "hugo server --disableFastRender --renderToDisk --liveReloadPort 80",
        "hugo-server:live-ssl": "hugo server --disableFastRender --renderToDisk --liveReloadPort 443",
        "bundle-js": "webpack --mode=production",
        "bundle-js:watch": "webpack --mode=development --watch",
        "ctf": "contentful-hugo --wait 6000",
        "ctf:preview": "contentful-hugo --preview",
        "ctf:preview:server": "contentful-hugo --preview --server",
        "live-preview-server": "npm run bundle-js && concurrently \"wait-on http://localhost:1414/_status && npm run hugo-server:live-ssl\" \"npm run ctf:preview:server\""
    },
    "author": "Joshua Sosso",
    "license": "MIT",
    "devDependencies": {
        "@fullhuman/postcss-purgecss": "^4.0.3",
        "@types/wait-on": "^5.2.0",
        "@typescript-eslint/eslint-plugin": "^5.4.0",
        "@typescript-eslint/parser": "^5.4.0",
        "autoprefixer": "^10.2.5",
        "concurrently": "^6.0.2",
        "contentful-hugo": "^2.0.1",
        "eslint": "^8.2.0",
        "eslint-config-airbnb-base": "^15.0.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-html": "^6.1.2",
        "eslint-plugin-import": "^2.22.1",
        "hugo-bin": "^0.77.2",
        "postcss": "^8.2.14",
        "postcss-cli": "^9.0.2",
        "postcss-import": "^14.0.1",
        "prettier": "^2.2.1",
        "prettier-plugin-go-template": "0.0.10",
        "tailwindcss": "^2.1.2",
        "ts-loader": "^9.1.2",
        "ts-node": "^10.4.0",
        "typescript": "^4.2.4",
        "wait-on": "^6.0.0",
        "webpack": "^5.36.2",
        "webpack-cli": "^4.7.0"
    }
}
